@model List<N1_2Bi___LP1.Models.PedidoViewModel>



<br />
<br />
<table class="table table-striped table-responsive">
    <tr>
        <th>Código</th>
        <th>Data</th>
        <th>Nome do Usuário</th>
        <th>Valor Total</th>
        <th>Quantidade de produtos</th>
    </tr>

    @foreach (var pedido in Model)
    {
        <tr>
            <td>@pedido.Id</td>
            <td>@pedido.Data.ToString("dd/MM/yyyy")</td>
            <td>@pedido.NomeUsuario</td>
            <td>@pedido.ValorTotal.Value.ToString("C")</td>
            <td>@pedido.QuantidadeProdutos</td>
        </tr>
    }
</table>
<script>
    function apagarPedido(id) {
        if (confirm('Confirma a exclusão do registro?'))
            location.href = 'Pedido/Delete?id=' + id;
    }
</script>
