@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<fieldset id="areaFiltro" class="form-group">
    <legend>Consulta avançada de Produtos</legend>
    <div class="row">
        <div class="col-lg-4">
            Nome<br />
            <input type="text" id="nome" class="form-control" />
        </div>
        <div class="col-lg-3">
            Análises <br />
            <select id="analises" class="form-control">
                <option value="1">Análises mais Positivas</option>
                <option value="2">Análises mais Negativas</option>
            </select>
        </div>
        <div class="col-lg-2">
            Faixa de Preço <br />
            <input type="number" id="precoMenor" class="form-control" />
        </div>
        <div class="col-lg-2">
            <br />
            <input type="number" id="precoMaior" class="form-control" />
        </div>
        <div class="col-lg-1">
            <br />
            <input type="button" id="btnFiltro" class="btn btn-success" value="Aplicar"
                   onclick="aplicaFiltroConsultaAvancada()" />
        </div>
    </div>
</fieldset>
<div id="resultadoConsulta" class="table-responsive">
</div>

